<h1>Listing facilities</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Game types</th>
      <th>Hours</th>
      <th>Fee</th>
      <th>Membership</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.location %></td>
        <td><%= facility.game_types %></td>
        <td><%= facility.hours %></td>
        <td><%= facility.fee %></td>
        <td><%= facility.membership %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

