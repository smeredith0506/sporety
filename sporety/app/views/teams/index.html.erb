<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Game types</th>
      <th>Min players</th>
      <th>Max players</th>
      <th>Players</th>
      <th>Matches</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.game_types %></td>
        <td><%= team.min_players %></td>
        <td><%= team.max_players %></td>
        <td><%= team.players %></td>
        <td><%= team.matches %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
